<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd" 
        default-init-method="init" default-destroy-method="destroy">
	
	<bean id="singletonScope" class="com.wsz.spring.bean.BeanScope" scope="singleton"></bean>
	
	<bean id="prototypeScope" class="com.wsz.spring.bean.BeanScope" scope="prototype"></bean>
	
	<bean id="requestScope" class="com.wsz.spring.bean.BeanScope" scope="request"></bean>
	
	<bean id="sessionScope" class="com.wsz.spring.bean.BeanScope" scope="session"></bean>
 </beans>
